<!--pages/home/home.wxml-->
<!-- 1.事件处理 -->
<button size="mini" bindtap="handleBtnClick" >按钮</button>
<button size="mini" bind:tap="handleBtnClick">按钮</button>
<button size="mini" catch:tap="handleBtnClick">按钮</button>
<!-- 2.常见事件 -->
<view class="box"
      bind:touchstart="handleTouchStart"
      bind:touchmove="handleTouchMove"
      bind:touchend="handleTouchEnd"
      bind:tap="handleTap"
      bind:longpress="handleLongpress">

</view>
<!-- 3.事件对象 -->
<button id='btn' size="mini"
        bindtap="handleEventClick"
        bindtouchend="handleEventEnd">
事件对象
</button>

<view class="outer" id="outer" bindtap="handleOuter">外层的view
  <view class="inner" id="inner" bindtap="handleInner">内部的</view>
</view>

<!-- 4.事件的传递参数 -->
<view class="container">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="item"
          bindtap="handleItemClick"
          data-index="{{index}}"
          data-item="{{item}}">
     {{item}}
    </view>
  </block>
</view>

 <!-- 在事件冒泡和事件捕获中   bind:一层层传递   catch: 阻止事件的进一步传递  事件捕获capture-bind:tap="handleCaptureView1"-->
 <view class="view1"  bindtap="handleBindView1"
                      capture-bind:tap="handleCaptureView1">
    <view class="view2" catchtap="handleBindView2"
                        capture-bind:tap="handleCaptureView2">
      <view class="view3" bindtap="handleBindView3"
                          capture-bind:tap="handleCaptureView3"></view>
    </view>
 </view>