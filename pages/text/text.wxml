<!--pages/text/text.wxml-->
<!-- 1.基本使用 text行内元素，相当于span -->
<text>Hello world\n</text>
<text>你好源程序\n</text>

<!-- 2.seletable:true -->
<!-- 默认情况下，text中的文本长按是不能选中的 -->
<text selectable="{{true}}">Hello world\n</text>
<text selectable>你好源程序\n</text>

<!-- 3.space:决定文本空格的大小 -->
<text>Hello world\n</text>
<text space="nbsp">Hello world\n</text>
<text space="ensp">Hello world\n</text>
<text space="emsp">Hello world\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode="true">5 &gt; 3\n</text>
<text decode>5 &gt; 3\n</text>
<text decode="{{true}}">5 &gt; 3\n</text>

