<!--pages/view/view.wxml-->
<!-- 1.view的基本使用 -->
<view class="box">哈喇哈哈</view>
<view>喳喳</view>

<!-- 2.hover-class:按下的状态样式 -->
<view class="box1"
      hover-class="hover-view"
      hover-start-time="0">
  哈喇哈哈
</view>

<!-- 3.hover-stop-propagation:阻止祖先组件的点击态 -->
<view class="box2" hover-class="box2-hover">
  <view class="box1"
        hover-class="hover-view"
        hover-start-time="0"
        hover-stop-propagation>
    哈喇哈哈
  </view>
</view>